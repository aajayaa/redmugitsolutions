<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>RedMug</title>
    <link rel="shortcut icon" type="image/png" href="./images/image.png" />
    <link
      href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="./css/styles.min.css" />
  </head>

  <body>
    <!--  Body Wrapper -->
    <div
      class="page-wrapper"
      id="main-wrapper"
      data-layout="vertical"
      data-navbarbg="skin6"
      data-sidebartype="full"
      data-sidebar-position="fixed"
      data-header-position="fixed"
    >
      <!-- Sidebar Start -->
      <%- include('./includes/sidebar') %>
      <!--  Sidebar End -->

      <!--  Main wrapper -->
      <div class="body-wrapper">
        <!--  Header Start -->
        <%- include('./includes/header') %>
        <!--  Header End -->
        <div class="container-fluid">
          <div class="card">
            <h2 class="p-3">Testimonials</h2>
            <div
              class="d-flex justify-content-between ps-4 pe-4 container align-items-center card-body"
            >
              <h4>Manage Testimonials</h4>
              <a href="/add-testimonials" class="btn btn-primary"
                >Add Testimonial</a
              >
            </div>
            <div class="table-responsive">
              <table class="table text-nowrap mb-0 align-middle">
                <thead class="text-dark fs-4">
                  <tr>
                    <th class="border-bottom-0">
                      <h6 class="fw-semibold mb-0">S.N.</h6>
                    </th>
                    <th class="border-bottom-0">
                      <h6 class="fw-semibold mb-0">Client Name</h6>
                    </th>
                    <th class="border-bottom-0">
                      <h6 class="fw-semibold mb-0">Client Review</h6>
                    </th>
                    <th class="border-bottom-0">
                      <h6 class="fw-semibold mb-0">Client Logo</h6>
                    </th>

                    <th class="border-bottom-0">
                      <h6 class="fw-semibold mb-0">Action</h6>
                    </th>
                  </tr>
                </thead>
                <tbody>
                  <% testimonials.forEach(function(testimonial, index) { %>
                  <tr>
                    <td class="border-bottom-0">
                      <h6 class="fw-semibold mb-0"><%= index + 1 %></h6>
                    </td>
                    <td class="border-bottom-0">
                      <h6 class="fw-semibold mb-1"><%= testimonial.name %></h6>
                    </td>
                    <td class="border-bottom-0">
                      <h6 class="fw-semibold mb-1">
                        <%= testimonial.review %>
                      </h6>
                    </td>
                    <td class="border-bottom-0">
                      <p class="mb-0 fw-normal">
                        <a href=""
                          ><img
                            src="/uploads/<%= testimonial.logo[0] %>"
                            alt=""
                            width="50px"
                        /></a>
                      </p>
                    </td>

                    <td class="border-bottom-0">
                      <h6 class="fw-semibold mb-0 fs-4">
                        <a href="" class="btn btn-primary">Edit</a>
                        <a href="" class="btn btn-success text-dark">Delete</a>
                      </h6>
                    </td>
                  </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script src="../assets/libs/jquery/dist/jquery.min.js"></script>
    <script src="../assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="../assets/js/sidebarmenu.js"></script>
    <script src="../assets/js/app.min.js"></script>
    <script src="../assets/libs/apexcharts/dist/apexcharts.min.js"></script>
    <script src="../assets/libs/simplebar/dist/simplebar.js"></script>
    <script src="../assets/js/dashboard.js"></script>
  </body>
</html>
